{
  "name": "wui-carousel",
  "version": "0.0.1",
  "description": "lit based carousel element, pass the data as array of objects ",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start --coverage",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "start:build": "cd dist && es-dev-server --open",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "storybook": "start-storybook",
    "clean:ts-js": "rimraf output",
    "build:ts": "tsc",
    "watch:ts-build": "tsc --watch",
    "start:ts-compile": "npm run clean:ts-js build:ts && npm run build:ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muneerzargar/WUI-Components.git"
  },
  "keywords": [
    "webcomponents",
    "carousel"
  ],
  "author": "wui-components",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muneerzargar/WUI-Components/issues"
  },
  "homepage": "https://github.com/muneerzargar/WUI-Components#readme",
  "dependencies": {
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@open-wc/building-rollup": "^0.9.0",
    "@open-wc/eslint-config": "^1.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@storybook/addon-knobs": "^5.2.3",
    "@storybook/addon-notes": "^5.2.3",
    "@storybook/html": "^5.2.3",
    "@webcomponents/webcomponentsjs": "^2.3.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.1.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "rollup-plugin-typescript2": "^0.24.3",
    "typescript": "^3.7.0-beta",
    "webpack-merge": "^4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
